<div class="signup-container" data-controller="how-it-works">
  <h5 class="disclaimer">Bodfrens is only available on mobile, find us there!</h5>


  <div class="signup-content">

    <%= image_tag "pngs/logo.png", width: "245px", height: "50px", id: "signup-logo" %>

    <p class = "sign-up-subtitle">Gamify your workouts. Play with friends.</p>

    <a href="#" data-action="click->how-it-works#openHowItWorksModal" class="how-it-works">
    <h3>How it works ⓘ</h3>
    </a>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs signup" style = "padding-top: 50%">
        <%= f.input :email, label: false, required: true, autofocus: true, input_html: { autocomplete: "email", class: "signup-input", placeholder: "Enter your email" } %>

        <%= f.input :password, label: false, required: true, input_html: { autocomplete: "current-password", class: "signup-input", placeholder: "Enter your password" } %>

        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions">
          <%= f.button :submit, "Sign in to play", class: "main-orange-btn", style: "width: 250px;" %>
        </div>
      </div>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider|%>
        <%= button_to "Sign in with Google", omniauth_authorize_path(resource_name, provider), method: :post, class: "gray-modal-btn", style: "width:250px", data: { turbo: false }%>
      <%- end %>
    <%- end %>

    <div class="signin-bottom">
      <p class="signup-bottom-left">Don’t have an account? <%= link_to "Sign up", new_user_registration_path, class: "signup-bottom-right" %></p>
      <p class="signup-bottom-left">Forgot your password? <%= link_to "Reset password", new_user_password_path, class: "signup-bottom-right" %></p>
    </div>
  </div>
</div>

<div class="how-it-works-screen animate__animated animate__fadeIn" style="display:none">
  <a class="how-it-works-close-button" href="#" data-action="click->how-it-works#closeHowItWorksModal">
    <i class="fa-solid fa-x"  style="color: #2a2d32;"></i>
  </a>
